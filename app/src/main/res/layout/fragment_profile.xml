<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/fragment_profile_view_layout_width"
        android:layout_height="@dimen/fragment_profile_view_layout_height"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="3dp" />

    <ImageView
        android:id="@+id/img_profile_picture"
        android:layout_width="@dimen/fragment_profile_img_profile_layout_width"
        android:layout_height="@dimen/fragment_profile_img_profile_layout_height"
        android:layout_marginStart="@dimen/fragment_profile_img_profile_margin_start"
        android:layout_marginLeft="@dimen/fragment_profile_img_profile_margin_left"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="@dimen/fragment_profile_button_logout_layout_width"
        android:layout_height="@dimen/fragment_profile_button_logout_layout_height"
        android:layout_marginStart="@dimen/fragment_profile_button_logout_margin_start"
        android:layout_marginLeft="@dimen/fragment_profile_button_logout_margin_left"
        android:layout_marginEnd="@dimen/fragment_profile_button_logout_margin_end"
        android:layout_marginRight="@dimen/fragment_profile_button_logout_margin_right"
        android:layout_marginBottom="@dimen/fragment_profile_button_logout_margin_bottom"
        android:background="@color/colorAccent"
        android:text="@string/fragment_profile_button_logout_text_description"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_details"
        android:layout_width="@dimen/fragment_profile_recycler_view_layout_width"
        android:layout_height="@dimen/fragment_profile_recycler_view_layout_height"
        android:layout_marginStart="@dimen/fragment_profile_recycler_view_margin_start"
        android:layout_marginLeft="@dimen/fragment_profile_recycler_view_margin_left"
        android:layout_marginTop="@dimen/fragment_profile_recycler_view_margin_top"
        android:layout_marginEnd="@dimen/fragment_profile_recycler_view_margin_end"
        android:layout_marginRight="@dimen/fragment_profile_recycler_view_margin_right"
        android:layout_marginBottom="@dimen/fragment_profile_recycler_view_margin_bottom"
        app:layout_constraintBottom_toTopOf="@+id/bt_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>