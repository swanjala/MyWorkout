<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ProgressBar
        android:id="@+id/pb_home"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/fragment_main_pb_home_layout_width"
        android:layout_height="@dimen/fragment_main_pb_home_layout_height"
        android:layout_marginStart="@dimen/fragment_main_pb_home_margin_start"
        android:layout_marginLeft="@dimen/fragment_main_pb_home_margin_left"
        android:layout_marginTop="@dimen/fragment_main_pb_home_margin_top"
        android:layout_marginEnd="@dimen/fragment_main_pb_home_margin_end"
        android:layout_marginRight="@dimen/fragment_main_pb_home_margin_right"
        android:layout_marginBottom="@dimen/fragment_main_pb_home_margin_bottom"
        android:indeterminate="false"
        app:layout_constraintBottom_toTopOf="@+id/tv_email_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guiding_text" />

    <ImageView
        android:id="@+id/iv_myworkoutlog"
        android:layout_width="@dimen/fragment_main_iv_log_layout_width"
        android:layout_height="@dimen/fragment_main_iv_log_layout_height"
        app:layout_constraintBottom_toTopOf="@+id/tv_app_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_app_name"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="@+id/tv_app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779"
        app:srcCompat="@mipmap/myworkoutlogo" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_main_tv_name_layout_height"
        android:letterSpacing="0.01"
        android:text="@string/fragment_main_tv_name_text"
        android:textColor="#0E0D0D"
        android:textSize="@dimen/fragment_main_tv_name_text_size"
        app:layout_constraintBottom_toTopOf="@+id/tv_guiding_text"
        app:layout_constraintEnd_toEndOf="@+id/tv_guiding_text"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="@+id/tv_guiding_text"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tv_guiding_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_main_tv_guiding_text_margin_bottom"
        android:text="@string/fragment_main_tv_guiding_text_description"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@+id/tv_email_address"
        app:layout_constraintEnd_toEndOf="@+id/tv_email_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_email_address" />

    <EditText
        android:id="@+id/tv_email_address"
        android:layout_width="@dimen/fragment_main_tv_email_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_main_tv_email_layout_start"
        android:layout_marginLeft="@dimen/fragment_main_tv_email_margin_left"
        android:layout_marginEnd="@dimen/fragment_main_tv_email_margin_end"
        android:layout_marginRight="@dimen/fragment_main_tv_email_margin_right"
        android:layout_marginBottom="@dimen/fragment_main_tv_email_margin_bottom"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/fragment_main_tv_email_text"
        android:textSize="@dimen/fragment_main_tv_email_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_next"
        android:layout_width="@dimen/fragment_main_nav_constraint_layout_width"
        android:layout_height="@dimen/fragment_main_nav_constraint_layout_height"
        android:layout_marginStart="@dimen/fragment_main_nav_constraint_margin_start"
        android:layout_marginLeft="@dimen/fragment_main_nav_constraint_margin_left"
        android:layout_marginTop="@dimen/fragment_main_nav_constraint_margin_top"
        android:layout_marginEnd="@dimen/fragment_main_nav_constraint_margin_end"
        android:layout_marginRight="@dimen/fragment_main_nav_constraint_margin_right"
        android:layout_marginBottom="@dimen/fragment_main_nav_constraint_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_address"
        app:layout_constraintVertical_bias="0.555">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/fragment_main_nav_constraint_tv_login_margin_width"
            android:layout_height="@dimen/fragment_main_nav_constraint_tv_login_margin_height"
            android:layout_marginTop="@dimen/fragment_main_nav_constraint_tv_login_margin_top"
            android:layout_marginBottom="@dimen/fragment_main_nav_constraint_tv_login_margin_bottom"
            android:text="@string/fragment_main_nav_constraint_tv_login_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/fragment_main_nav_constraint_tv_login_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473"
            tools:layout_editor_absoluteX="4dp" />

        <ImageView
            android:id="@+id/img_login"
            android:layout_width="@dimen/fragment_main_nav_constraint_img_login_layout_width"
            android:layout_height="@dimen/fragment_main_nav_constraint_img_login_layout_height"
            android:layout_marginEnd="@dimen/fragment_main_nav_constraint_img_login_margin_end"
            android:layout_marginRight="@dimen/fragment_main_nav_constraint_img_login_margin_right"
            android:layout_marginBottom="@dimen/fragment_main_nav_constraint_img_login_margin_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/tv_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_login"
            app:layout_constraintVertical_bias="0.272"
            app:srcCompat="@mipmap/nexticon" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>